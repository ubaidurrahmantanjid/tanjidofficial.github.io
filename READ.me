<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ubaidur Rahman Tanjid</title>

  <style>
    :root {
      --primary: #2563eb;
      --bg: #f5f5f5;
      --text: #111;
      --card: #ffffff;
    }

    body.dark {
      --bg: #0f172a;
      --text: #e5e7eb;
      --card: #1e293b;
    }

    body {
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      background: var(--bg);
      color: var(--text);
      scroll-behavior: smooth;
      transition: 0.4s;
    }

    /* ===== NAVBAR ===== */
    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px 5%;
      position: sticky;
      top: 0;
      background: rgba(255,255,255,0.7);
      backdrop-filter: blur(10px);
      z-index: 1000;
    }

    body.dark .navbar {
      background: rgba(15,23,42,0.7);
    }

    .logo {
      font-size: 24px;
      font-weight: bold;
      color: var(--primary);
    }

    #navLinks a {
      margin: 0 12px;
      text-decoration: none;
      color: var(--text);
      font-weight: 500;
    }

    #navLinks a:hover {
      color: var(--primary);
    }

    .menu-toggle {
      display: none;
      font-size: 26px;
      cursor: pointer;
    }

    .dark-btn {
      cursor: pointer;
      font-size: 20px;
    }

    /* ===== HERO ===== */
    header {
      text-align: center;
      padding: 90px 20px;
    }

    .profile-img {
      width: 180px;
      height: 180px;
      border-radius: 50%;
      object-fit: cover;
      box-shadow: 0 10px 25px rgba(0,0,0,0.2);
    }

    h1 {
      margin-top: 20px;
      font-size: 36px;
    }

    .typing {
      font-size: 18px;
      color: var(--primary);
      height: 25px;
    }

    /* ===== SECTIONS ===== */
    section {
      padding: 70px 8%;
    }

    .card {
      background: var(--card);
      padding: 30px;
      border-radius: 16px;
      box-shadow: 0 10px 25px rgba(0,0,0,0.08);
    }

    /* ===== SOCIAL ===== */
    .social-links a {
      display: inline-block;
      margin: 10px;
      padding: 10px 22px;
      border-radius: 30px;
      background: var(--card);
      color: var(--primary);
      text-decoration: none;
      font-weight: bold;
      transition: 0.3s;
    }

    .social-links a:hover {
      background: var(--primary);
      color: white;
      transform: translateY(-3px);
    }

    footer {
      text-align: center;
      padding: 30px;
      font-size: 14px;
      opacity: 0.7;
    }

    /* ===== RESPONSIVE ===== */
    @media (max-width: 768px) {
      #navLinks {
        display: none;
        position: absolute;
        top: 70px;
        right: 5%;
        background: var(--card);
        flex-direction: column;
        width: 200px;
        border-radius: 12px;
      }

      #navLinks a {
        padding: 12px;
      }

      .menu-toggle {
        display: block;
      }
    }
  </style>
</head>
