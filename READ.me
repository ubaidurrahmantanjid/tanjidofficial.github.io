<script>
  /* MENU */
  function toggleMenu() {
    const nav = document.getElementById("navLinks");
    nav.style.display = nav.style.display === "flex" ? "none" : "flex";
  }

  window.onclick = function(e) {
    if (!e.target.matches('.menu-toggle')) {
      const nav = document.getElementById("navLinks");
      if (window.innerWidth <= 768) nav.style.display = "none";
    }
  }

  /* DARK MODE */
  function toggleDark() {
    document.body.classList.toggle("dark");
  }

  /* TYPING EFFECT */
  const texts = ["Student", "Sherlock Holmes Fan", "Gamer", "Future Developer"];
  let i = 0, j = 0;
  const typingDiv = document.getElementById("typing");

  function type() {
    if (j < texts[i].length) {
      typingDiv.textContent += texts[i][j++];
      setTimeout(type, 120);
    } else {
      setTimeout(erase, 1500);
    }
  }

  function erase() {
    if (j > 0) {
      typingDiv.textContent = texts[i].substring(0, --j);
      setTimeout(erase, 80);
    } else {
      i = (i + 1) % texts.length;
      setTimeout(type, 300);
    }
  }

  type();
</script>

